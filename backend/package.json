{
  "name": "template-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:export": "npm run test:coverage && powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/generate-coverage.ps1 -Project backend",
    "test:ci": "jest --ci --coverage",
    "db:init": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-init.ps1",
    "db:check": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-check.ps1",
    "db:migrate": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-migrate.ps1",
    "db:migrate:prod": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-migrate.ps1 -Environment production",
    "db:reset": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-reset.ps1",
    "db:seed": "npx prisma db seed",
    "db:studio": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-studio.ps1",
    "db:backup": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-backup.ps1",
    "db:restore": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/database/db-restore.ps1"
  },
  "dependencies": {
    "@prisma/adapter-libsql": "^7.2.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "ts-web-monorepo-template": "file:..",
    "uuid": "^13.0.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@prisma/client": "^7.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.0"
  }
}
