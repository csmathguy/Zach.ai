// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ============================================================================
// Core Models
// ============================================================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())

  // Relations
  thoughts        Thought[]
  assignedActions ActionAssignee[]

  @@map("users")
}

model Thought {
  id             String   @id @default(uuid())
  text           String
  source         String   @default("manual") // 'manual', 'agent', 'import', etc.
  timestamp      DateTime @default(now())
  processedState String   @default("UNPROCESSED") // 'UNPROCESSED', 'PROCESSED', 'ARCHIVED'
  userId         String

  // Relations
  user     User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects ProjectThought[]
  actions  ActionThought[]

  @@index([userId])
  @@index([timestamp])
  @@map("thoughts")
}

model Project {
  id           String   @id @default(uuid())
  title        String
  description  String?
  status       String   @default("ACTIVE") // 'ACTIVE', 'PAUSED', 'COMPLETED'
  nextActionId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  actions  Action[]
  thoughts ProjectThought[]

  @@index([status])
  @@index([updatedAt])
  @@map("projects")
}

model Action {
  id          String   @id @default(uuid())
  title       String
  description String?
  actionType  String // 'Manual', 'AgentTask', 'Clarification', 'Review', 'Recurring', 'Reference'
  status      String   @default("TODO") // 'TODO', 'IN_PROGRESS', 'COMPLETED', 'CANCELLED'
  projectId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project   Project?         @relation(fields: [projectId], references: [id], onDelete: SetNull)
  assignees ActionAssignee[]
  thoughts  ActionThought[]

  @@index([projectId])
  @@index([status])
  @@index([actionType])
  @@map("actions")
}

// ============================================================================
// Many-to-Many Junction Tables
// ============================================================================

model ProjectThought {
  projectId String
  thoughtId String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  thought Thought @relation(fields: [thoughtId], references: [id], onDelete: Cascade)

  @@id([projectId, thoughtId])
  @@map("project_thoughts")
}

model ActionThought {
  actionId  String
  thoughtId String

  action  Action  @relation(fields: [actionId], references: [id], onDelete: Cascade)
  thought Thought @relation(fields: [thoughtId], references: [id], onDelete: Cascade)

  @@id([actionId, thoughtId])
  @@map("action_thoughts")
}

model ActionAssignee {
  actionId String
  userId   String

  action Action @relation(fields: [actionId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([actionId, userId])
  @@map("action_assignees")
}

